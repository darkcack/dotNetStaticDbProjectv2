@model  WebVizev2.Models.Novel

@{
    ViewBag.Title = "detay";


}
<style>
    .dd {
        padding-left: 120vh;
    }
</style>

<div class="alert bg-dark" role="alert">
    <h2 class="alert-heading text-white">@Model.Name</h2>
    <h3 class="alert-heading text-white">Kategori: @Model.category.Name [@Model.Year]</h3>
    <h4 class="alert-heading text-white">Yazar: @Model.Headliner</h4>
    <h4 class="alert-heading text-white">Çevirmen: @Model.translator</h4>
    <h5 class="alert-heading text-white">@Model.id</h5>


    <hr />
    <p class="text-white" style="font-size:25px">@Model.Description</p>
    <br /> <br />
    <br /> <br />
    <br />
    <hr class="bg-white" />

    <h6 class="alert-heading">
        Bu Kategorideki diğer filmler:
        <br /> <br />
        @foreach (var item in Model.category.novels)
        {
            @Html.ActionLink(@item.Name, "DetayNovel", "Novel", new { id = item.id }, new { @class = "btn  btn-outline-light text-dark bg-light" })
            <br />


            <br />
        }
    </h6>
</div>

@Html.Partial("Yorum", Model)



